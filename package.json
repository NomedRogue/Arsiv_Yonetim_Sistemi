{
  "name": "arsiv-yonetim-sistemi",
  "version": "1.2.2",
  "description": "Arşiv Yönetim Sistemi Masaüstü Uygulaması",
  "author": "Arşiv Yönetim Sistemi",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run rebuild && concurrently -k \"npm:backend\" \"npm:frontend\" \"npm:electron\"",
    "backend": "cd backend && node server.js",
    "frontend": "npm run dev --prefix frontend",
    "electron": "wait-on http://localhost:3001 http://localhost:5173/health && electron .",
    "build": "npm run build --prefix frontend && npm run copy-dist",
    "copy-dist": "powershell -Command \"Copy-Item -Path 'frontend\\dist' -Destination '.' -Recurse -Force\"",
    "package": "npm run build && electron-builder",
    "postinstall": "npm run install-deps",
    "install-deps": "electron-builder install-app-deps && npm rebuild better-sqlite3 --build-from-source",
    "rebuild": "npm rebuild better-sqlite3 --build-from-source",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "test": "jest",
    "test:backend": "jest --config ./backend/jest.config.js",
    "clean": "rimraf backend/arsiv.db backend/arsiv.db-shm backend/arsiv.db-wal backend/PDFs/* backend/Backups/* backend/tmp/* release/ dist/ dist_electron/ *.db *.log",
    "clean:appdata": "powershell -Command \"Remove-Item -Path $env:APPDATA\\arsiv-yonetim-sistemi -Recurse -Force -ErrorAction SilentlyContinue\""
  },
  "build": {
    "appId": "com.arsivyonetim.sistemi",
    "productName": "Arşiv Yönetim Sistemi",
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "assets/**/*",
      "dist/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "package.json",
      "!backend/Backups/**",
      "!backend/PDFs/**",
      "!backend/Excels/**",
      "!backend/tmp/**",
      "!backend/**/*.db",
      "!backend/**/*.db-shm",
      "!backend/**/*.db-wal",
      "!backend/**/*.log"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/backend/arsiv.db*",
      "**/backend/PDFs/**",
      "**/backend/Excels/**"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "extraUninstall.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Arşiv Yönetim Sistemi",
      "deleteAppDataOnUninstall": true,
      "perMachine": false,
      "runAfterFinish": true
    },
    "publish": {
      "provider": "github",
      "owner": "NomedRogue",
      "repo": "Arsiv_Yonetim_Sistemi",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "archiver": "^5.3.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "bindings": "^1.5.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-log": "^5.1.6",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2",
    "express-validator": "^7.3.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "wait-on": "^7.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@electron/rebuild": "^3.6.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lucide-react": "^0.560.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.3"
  },
  "overrides": {
    "js-yaml": "^4.1.1"
  }
}
